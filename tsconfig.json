{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // ✅ Avoid issues from DefinitelyTyped packages
    "forceConsistentCasingInFileNames": true, // ✅ Good for Linux/Mac
    "resolveJsonModule": true, // ✅ If you ever import .json files
    "moduleResolution": "node", // ✅ Required for node_modules resolution
    "typeRoots": ["./node_modules/@types",
      "./src/main/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
